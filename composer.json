{
	"name": "widoz/konomi",
	"description": "A WordPress plugin to save posts as favorite using the new Interactive API",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "guido scialfa",
			"email": "dev@guidoscialfa.com"
		}
	],
	"minimum-stability": "stable",
	"require": {
		"php": ">=8.1",
		"inpsyde/modularity": "^1.5"
	},
	"require-dev": {
		"inpsyde/php-coding-standards": "^2.0.0-beta",
		"roots/wordpress-no-content": "^6.5",
		"vimeo/psalm": "^5.23",
		"pestphp/pest": "^2.34",
		"brain/monkey": "^2.6",
		"mockery/mockery": "^1.6"
	},
	"autoload": {
		"psr-4": {
			"Widoz\\Wp\\Konomi\\": "sources/"
		},
		"files": [
			"sources/package.php",
			"sources/Blocks/api.php",
			"sources/Icons/api.php",
			"sources/User/api.php"
		]
	},
	"config": {
		"platform": {
			"php": "8.1"
		},
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"pestphp/pest-plugin": true
		}
	},
	"scripts": {
		"cs": "@php ./vendor/bin/phpcs",
		"cs:fix": "@php ./vendor/bin/phpcbf",
		"psalm": "@php ./vendor/bin/psalm",
		"test": "@php ./vendor/bin/pest"
	}
}
