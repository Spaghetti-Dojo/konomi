{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"checkJs": false,
		"allowJs": false,
		"exactOptionalPropertyTypes": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"jsx": "react",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"typeRoots": [ "./node_modules/@types", "./@types" ],
		"rootDir": "./",
		"paths": {
			"@konomi/wp-types": [ "./@types/wp" ],
			"@konomi/types": [ "./@types" ],
			"@konomi/api-fetch": [ "./sources/ApiFetch/client" ],
			"@konomi/configuration": [ "./sources/Configuration/client" ],
			"@konomi/icons": [ "./sources/Icons/client" ],
			"@wordpress/block-editor": [
				"./node_modules/@wordpress/block-editor/src"
			],
			"@wordpress/blocks": [ "./node_modules/@wordpress/blocks/src" ],
			"@test/helpers": [ "./tests/helpers.ts" ]
		}
	},
	"include": [ "./sources", "./@types" ],
	"exclude": [ "**/dist/", "**/build-module/", "node_modules", "**/tests/" ]
}
